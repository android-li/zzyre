    android:layout_height="fill_parent"
    android:background="@drawable/v5_0_1_desktop_list_item"
    android:orientation="vertical" >


        <ExpandableListView
            android:id="@+id/desktop_list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
