<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout style="@style/top_layout_style" >

        <Button
            android:id="@id/bt_showMenu"
            style="@style/top_btn_back_style" />

        <TextView
            style="@style/top_txt_title_style"
            android:text="@string/goInfo" />
<!-- 
        <Button
            style="@style/top_btn_right_style"
            android:text="@string/search" />
             -->
    </LinearLayout>

    <com.xhrd.customview.FragmentIndicator
        android:id="@id/indicator"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >
    </com.xhrd.customview.FragmentIndicator>

    <FrameLayout
        android:id="@id/content_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>